<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dragonos.tracker.mapper.ProjectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dragonos.tracker.pojo.Project">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="full_name" property="fullName" />
        <result column="html_url" property="htmlUrl" />
        <result column="description" property="description" />
        <result column="pr_num" property="prNum" />
        <result column="issue_num" property="issueNum" />
        <result column="hot" property="hot" />
        <result column="project_id" property="projectId" />
        <result column="state" property="state" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, full_name, html_url, description, created_at, updated_at, license, forks_count, stargazers_count, watchers_count, pr_num, issue_num, hot
    </sql>

    <delete id="clearTable">
        truncate table ct_project;
    </delete>

</mapper>
